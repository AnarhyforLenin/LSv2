<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Store"
    android:background="#bcc595">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Maгазин"
            android:fontFamily="@font/fontone"
            android:textSize="50dp"
            android:gravity="center"
            android:textColor="@color/Green"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        android:orientation="vertical"
        android:id="@+id/line2">

        <ImageButton
            android:id="@+id/bed2"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/bed2"
            app:layout_constraintEnd_toStartOf="@+id/bed3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/bed3"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/bed3"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/bed1"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/bed1"
            app:layout_constraintEnd_toStartOf="@+id/bed3"
            app:layout_constraintStart_toEndOf="@+id/bed2"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/fontone"
            android:gravity="center_vertical"
            android:rotation="-90"
            android:text="Кровати"
            android:textColor="@color/Green"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        android:orientation="vertical"
        android:id="@+id/line3">
        <ImageButton
            android:id="@+id/car2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/car2"
            android:rotation="90"
            app:layout_constraintEnd_toStartOf="@+id/car3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/car3"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:rotation="90"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/car3"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/car1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/car1"
            android:rotation="90"
            app:layout_constraintEnd_toStartOf="@+id/car3"
            app:layout_constraintStart_toEndOf="@+id/car2"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/fontone"
            android:gravity="center_vertical"
            android:rotation="-90"
            android:text="Коврики"
            android:textColor="@color/Green"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/line3"
        android:orientation="vertical"
        android:id="@+id/line4">
        <ImageButton
            android:id="@+id/plant2"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/plant2"
            app:layout_constraintEnd_toStartOf="@+id/plant3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/plant3"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/plant3"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/plant1"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/plant1"
            app:layout_constraintEnd_toStartOf="@+id/plant3"
            app:layout_constraintStart_toEndOf="@+id/plant2"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/fontone"
            android:gravity="center_vertical"
            android:rotation="-90"
            android:text="Растения"
            android:textColor="@color/Green"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/line4"
        android:orientation="vertical"/>


</androidx.constraintlayout.widget.ConstraintLayout>